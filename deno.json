{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "tasks": {
    "translate": "deno --allow-net --allow-read --allow-write --allow-env --env-file=.env main.ts"
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 160,
    "proseWrap": "preserve",
    "semiColons": true,
    "singleQuote": true,
    "useTabs": false
  },
  "lock": false,
  "unstable": [
    "raw-imports"
  ]
}